{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**",
        "typings/tsd.d.ts",
        "custom_typings/main.d.ts"
    ],
    "files": [
        "cleanup-passes.ts",
        "custom_typings/main.d.ts",
        "tedium.ts",
        "typings/js-yaml/js-yaml.d.ts",
        "typings/node/node.d.ts",
        "typings/progress/progress.d.ts",
        "typings/rimraf/rimraf.d.ts",
        "typings/tsd.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
